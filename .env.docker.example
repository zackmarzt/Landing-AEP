# Docker Environment Variables Example
# Copy this file to .env.docker and fill in your actual values

# Application
APP_PORT=3000

# Database
POSTGRES_USER=aep_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=aep_db
POSTGRES_PORT=5432

# Database URL (used by the app)
DATABASE_URL=postgresql://aep_user:your_secure_password_here@db:5432/aep_db

# NextAuth
AUTH_SECRET=your_auth_secret_here_generate_with_openssl_rand_base64_32
AUTH_URL=http://localhost:3000

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# Google AI
GOOGLE_GENAI_API_KEY=your_google_ai_api_key_here
